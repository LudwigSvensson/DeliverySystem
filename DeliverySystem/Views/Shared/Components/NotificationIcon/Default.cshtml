@model int

<div class="notification-icon">
    <a asp-controller="Event" asp-action="Notifications" title="Recent Events">
        <i class="fa fa-bell"></i> <!-- Font Awesome ikon för notifikationer -->
        @if (Model > 0)
        {
            <span class="badge">@Model</span>
        }
    </a>
</div>

<style>
    .notification-icon {
        position: relative;
    }
    .notification-icon .badge {
        position: absolute;
        top: -5px;
        right: -10px;
        background-color: red;
        color: white;
        border-radius: 50%;
        padding: 2px 6px;
        font-size: 0.8em;
    }
</style>

