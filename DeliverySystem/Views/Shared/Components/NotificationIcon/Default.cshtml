@model int

<div class="notification-icon">
    <a asp-controller="Event" asp-action="Notifications" title="Recent Events">
        <i class="fa-regular fa-bell"></i>
        @if (Model > 0)
        {
            <span class="badge">@Model</span>
        }
    </a>
</div>

<style>
    .notification-icon {
        position: relative;
    }

        .notification-icon a {
            color: black;
            text-decoration: none;
        }

     
        .notification-icon i {
            font-size: 1.5em;
            transition: transform 0.2s ease; 
        }


        .notification-icon a:hover i {
            transform: scale(1.2); 
        }

        .notification-icon .badge {
            position: absolute;
            top: -5px;
            right: -10px;
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 2px 6px;
            font-size: 0.8em;
        }

</style>

