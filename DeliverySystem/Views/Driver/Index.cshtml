@using Azure.Core  
@model IEnumerable<DriverInfo.Models.Driver>  
 
@{  
   ViewData["Title"] = "Drivers";  
}  
 
<form method="get" asp-action="Index" class="form-inline mb-4">
    <label class="mr-2">Search for Driver by name</label>
    <div class="input-group" style="width: 75%;">
        <input class="form-control" type="text" name="searchName" value="@Context.Request.Query["searchName"]" placeholder="Enter driver name" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-success btn-lg">Search</button>
            <a asp-action="Index" class="btn btn-secondary btn-lg">Reset</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered table-hover">
    <thead>  
       <tr>  
           <th>  
               @Html.DisplayNameFor(model => model.DriverName)  
           </th>  
           <th>  
               @Html.DisplayNameFor(model => model.CarReg)  
           </th>  
           <th>  
               @Html.DisplayNameFor(model => model.ResponsibleEmployee)  
           </th>  
           <th>
               Actions
           </th>  
       </tr>  
   </thead>  
   <tbody>  
@foreach (var item in Model) {  
       <tr>  
           <td>  
               @Html.DisplayFor(modelItem => item.DriverName)  
           </td>  
           <td>  
               @Html.DisplayFor(modelItem => item.CarReg)  
           </td>  
           <td>  
               @Html.DisplayFor(modelItem => item.ResponsibleEmployee.Name)  
           </td>  
           <td>
                    <a asp-action="Edit" class="btn btn-outline-warning btn-sm" btn-sm" asp-route-id="@item.DriverID">Edit</a>
                    <a asp-action="Details" class="btn btn-outline-info btn-sm" asp-route-id="@item.DriverID">Details</a>
                    <a asp-action="Delete" class="btn btn-outline-danger btn-sm" btn-sm" asp-route-id="@item.DriverID">Delete</a>
                </td>  
       </tr>  
}  
   </tbody>  
</table>
<p>
    <a asp-action="Create" class="btn btn-success btn-lg">Add a new Driver</a>
</p>
