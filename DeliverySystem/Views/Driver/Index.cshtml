@using Azure.Core  
@model IEnumerable<DriverInfo.Models.Driver>  
 
@{  
   ViewData["Title"] = "Drivers";  
}  
 
<form method="get" asp-action="Index">  
   <label>Search for Driver by name</label>  
   <input type="text" name="searchName" value="@Context.Request.Query["searchName"]" />  
   <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>  

<p>  
   <a asp-action="Create">Create New</a>  
</p>  
<table class="table">  
   <thead>  
       <tr>  
           <th>  
               @Html.DisplayNameFor(model => model.DriverName)  
           </th>  
           <th>  
               @Html.DisplayNameFor(model => model.CarReg)  
           </th>  
           <th>  
               @Html.DisplayNameFor(model => model.ResponsibleEmployee)  
           </th>  
           <th></th>  
       </tr>  
   </thead>  
   <tbody>  
@foreach (var item in Model) {  
       <tr>  
           <td>  
               @Html.DisplayFor(modelItem => item.DriverName)  
           </td>  
           <td>  
               @Html.DisplayFor(modelItem => item.CarReg)  
           </td>  
           <td>  
               @Html.DisplayFor(modelItem => item.ResponsibleEmployee.Name)  
           </td>  
           <td>  
               <a asp-action="Edit" asp-route-id="@item.DriverID">Edit</a> |  
               <a asp-action="Details" asp-route-id="@item.DriverID">Details</a> |  
               <a asp-action="Delete" asp-route-id="@item.DriverID">Delete</a> |  
           </td>  
       </tr>  
}  
   </tbody>  
</table>
