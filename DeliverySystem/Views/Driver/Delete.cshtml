@model DriverInfo.Models.Driver

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-center mb-4">Delete Driver</h2>
<p class="text-center mb-4">Are you sure you want to delete <strong>@Model.DriverName</strong> from the system?</p>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-5">Driver Name</dt>
        <dd class="col-sm-7">@Model.DriverName</dd>

        <dt class="col-sm-5">Registration Number</dt>
        <dd class="col-sm-7">@Model.CarReg</dd>

    </dl>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DriverID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>
