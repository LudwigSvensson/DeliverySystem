@model DriverInfo.Models.Driver

@{
    ViewData["Title"] = "Details";
}

<h2>Driver Details</h2>

<div>
    <h4>@Model.DriverName</h4>
    <p>Car Registration: @Model.CarReg</p>
</div>

<h4>Filter Events by Date</h4>
<form method="get" asp-action="Details" asp-route-id="@Model.DriverID">
    <label>Från:</label>
    <input type="date" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />

    <label>Till:</label>
    <input type="date" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />

    <button type="submit" class="btn btn-primary">Filter</button>
    <a asp-action="Details" asp-route-id="@Model.DriverID" class="btn btn-secondary">Reset</a>
</form>

<h4>Events</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Amount In</th>
                <th>Amount Out</th>
                <th>Responsible Employee</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in Model.Events)
            {
                <tr>
                    <td>@eventItem.NoteDate.ToShortDateString()</td>
                    <td>@eventItem.NoteDescription</td>
                    <td>@eventItem.AmountIn</td>
                    <td>@eventItem.AmountOut</td>
                    <td>@eventItem.ResponsibleEmployee</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DriverID">Edit</a> |
    <a asp-action="Create" asp-controller="Event" asp-route-driverId="@Model.DriverID">Add Event</a> |
    <a asp-action="Index">Back to List</a>
</div>
