@model IEnumerable<DriverInfo.Models.Employee>

<h2>Employee List</h2>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Email</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Email</td>
            <td>@employee.Name</td>
            <td>
                <a asp-action="Edit" class="btn btn-outline-warning btn-sm" asp-route-id="@employee.Id">Edit</a>
                <a asp-action="Delete" class="btn btn-outline-danger btn-sm" asp-route-id="@employee.Id">Delete</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" class="btn btn-success">Create New Employee</a>
