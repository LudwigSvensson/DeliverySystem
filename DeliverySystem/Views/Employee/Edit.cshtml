@model DriverInfo.Models.Employee

<h2>Edit Employee</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    
    <button class="btn btn-success btn-block mt-4" type="submit"> Save Changes</button>
</form>
