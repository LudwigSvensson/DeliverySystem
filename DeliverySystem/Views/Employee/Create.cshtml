@model DriverInfo.Models.Employee

        <h2 class="text-center mb-4">Create New Employee</h2>
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label for="Email" class="font-weight-bold">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="off aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Name" class="font-weight-bold">Name</label>
                <input asp-for="Name" class="form-control" autocomplete="off" aria-required="true" placeholder="Mr Example/Mrs Example" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password" class="font-weight-bold">Password</label>
                <input class="form-control" type="password" name="password" autocomplete="off" aria-required="true" placeholder="password" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success btn-block mt-4">Create New Employee</button>
        </form>



