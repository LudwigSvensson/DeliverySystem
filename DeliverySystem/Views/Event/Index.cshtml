@model IEnumerable<DriverInfo.Models.Event>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoteDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsibleEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Driver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteDescription)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.AmountIn +" kr")
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.AmountOut +" kr")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponsibleEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Driver.CarReg)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
            </td>
        </tr>
}
    </tbody>
<table/>
