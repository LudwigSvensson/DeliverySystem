@using Azure.Core
@model IEnumerable<DriverInfo.Models.Event>

<h2>Admin Event History</h2>

<!-- Filtreringsformulär -->
<form method="get" asp-action="AdminOverview">
    <div>  
       <label>Från datum:</label>  
       <input type="date" name="startDate" value="@Context.Request.Query["startDate"]" />  
    </div>
    <div>
        <label>Till datum:</label>
        <input type="date" name="endDate" value="@Context.Request.Query["endDate"]" />
    </div>
    <div>
        <label>Driver-namn:</label>
        <input type="text" name="driverName" value="@Context.Request.Query["driverName"]" placeholder="Sök efter driver" />
    </div>
    <div>
        <label>Employee-namn:</label>
        <input type="text" name="employeeName" value="@Context.Request.Query["employeeName"]" placeholder="Sök efter employee" />
    </div>
    <button type="submit">Filtrera</button>
    <a asp-action="AdminOverview" class="btn btn-secondary">Återställ</a>
</form>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Amount In</th>
            <th>Amount Out</th>
            <th>Driver</th>
            <th>Responsible Employee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.NoteDate.ToString("g")</td>
                <td>@eventItem.NoteDescription</td>
                <td>@eventItem.AmountIn</td>
                <td>@eventItem.AmountOut</td>
                @if(eventItem.Driver == null)
                {
                    <td>Secret Driver </td>
                }
                <td>@eventItem.Driver?.DriverName </td>
                @if (eventItem.ResponsibleEmployee == null)
                {
                    <td>Employee not assigned </td>
                }
                <td>@eventItem.ResponsibleEmployee?.Name </td>
            </tr>
        }
    </tbody>
</table>
